{% extends "base.html.twig" %}

{% block content %}

    <div class="my-home-container">

        <div class="my-home-background"></div>

        <div class="container-fluid">
            <div class="row white-block"></div>
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="my-main-add">
                        <H1>
                            Iemācies veidot 
                            <strong>lieliskas lietas</strong>
                            kopā ar mums
                        </H1>  
                    </div>

                    <div class="my-main-add-buttons">
                        <a class="btn my-btn-background-1" href="{{urlFor('textpage', {slug:'par-lapu'})}}">Par skolu</a>
                        <a class="btn my-btn-background-2" href="{{urlFor('study-list')}}">Programmas</a>
                    </div>
                </div>
            </div>

            <div class="row my-events-bg">
                <div class="col-md-10 col-md-offset-1">
                    <div class="programma-type-container my-events-header">
                        <p class="programma-type">Notikumi</p>
                    </div>
                    {% for blog in blogs %}
                        <a href="{{urlFor('blog-post', {slug: blog.slug})}}">
                            <div class="latest-blog-post-box">
{#                                <time datetime="YYYY-MM-DD">{{ blog.created }}</time>#}
                                <img src="/img/post-img/{{blog.slug}}" alt="{{blog.title}}">
                                <h3>{{ blog.title }}</h3>
                                <h5>{{ blog.description }}</h5>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>



    </div>

{% endblock %}